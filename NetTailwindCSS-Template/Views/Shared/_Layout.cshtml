@{
    string? currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    string? currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    bool isHomeMenu = (currentController == "Home" && currentAction == "Index");
    bool isPrivacyMenu = (currentController == "Home" && currentAction == "Privacy");
}
<!DOCTYPE html>
<html lang="es" class="">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - NetTailwindCSS Template</title>
        <link rel="stylesheet" href="~/css/tailwind.output.css" />
        <link rel="stylesheet" href="~/css/main.css" />
    </head>
    <body>
        <header>
            <nav class="border-gray-200 bg-white dark:bg-gray-900">
                <div class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between p-4">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-3">
                    <span class="self-center whitespace-nowrap text-2xl font-semibold dark:text-white">NetTailwindCSS Template</span>
                    </a>
                    <button data-collapse-toggle="navbar-default" type="button" class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 md:hidden dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <svg class="h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15" />
                        </svg>
                    </button>
                    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
                        <ul class="mt-4 flex flex-col rounded-lg border border-gray-100 bg-gray-50 p-4 font-medium dark:bg-gray-800 dark:border-gray-700 md:p-0 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-white md:dark:bg-gray-900">
                            <li>
                            <a asp-controller="Home" asp-action="Index" class="@(isHomeMenu ? "bg-blue-700 md:bg-transparent text-white md:text-gray-900 md:dark:text-white" : "text-gray-900 hover:bg-gray-100 dark:text-blue-500 dark:text-white md:text-blue-700") block rounded px-3 py-2 md:p-0 md:border-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:dark:hover:bg-transparent" aria-current="page">Home</a>
                            </li>
                            <li>
                            <a asp-controller="Home" asp-action="Privacy" class="@(isPrivacyMenu ? "bg-blue-700 md:bg-transparent text-white md:text-gray-900 md:dark:text-white" : "text-gray-900 hover:bg-gray-100 dark:text-blue-500 dark:text-white md:text-blue-700") block rounded px-3 py-2 md:p-0 md:border-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:dark:hover:bg-transparent">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container mx-auto">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="z-20 fixed bottom-0 left-0 w-full border-t border-gray-200 bg-white p-4 shadow dark:bg-gray-800 dark:border-gray-600 md:flex md:items-center md:justify-between md:p-6">
            <span class="text-sm text-gray-500 dark:text-gray-400 sm:text-center">
            © 2024 NetTailwindCSS Template
            </span>
            <ul class="mt-3 flex flex-wrap items-center text-sm font-medium text-gray-500 dark:text-gray-400 sm:mt-0">
                <li>
                    <a asp-controller="Home" asp-action="Index" class="me-4 hover:underline md:me-6">Home</a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Privacy" class="me-4 hover:underline md:me-6">Privacy</a>
                </li>
            </ul>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/main.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
